{
  "name": "mock-mirror",
  "version": "0.1.1",
  "main": "dist/",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "lint": "xo",
    "dev": "bun run --watch src/index.ts",
    "release": "bunx np"
  },
  "dependencies": {
    "@elysiajs/eden": "0.8.1",
    "elysia": "0.8.17",
    "minimatch": "9.0.3",
    "pino": "8.19.0",
    "pino-pretty": "10.3.1"
  },
  "devDependencies": {
    "bun-plugin-dts": "^0.2.1",
    "bun-types": "latest",
    "prettier": "^3.2.5",
    "xo": "0.57.0"
  },
  "module": "src/index.js",
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "trailingComma": "all",
    "printWidth": 120,
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "env": "node",
    "singleQuote": true,
    "prettier": true,
    "rules": {
      "@typescript-eslint/object-curly-spacing": "off",
      "@typescript-eslint/naming-convention": "off",
      "new-cap": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ]
    }
  }
}
